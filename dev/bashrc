#!/bin/bash
y="\e[1;33m"
w="\e[1;37m"
r="\e[0m"

uptime=$(uptime -p)

echo -e "${y}      ${w}.    .                       ${r}"
echo -e "  ${w}.   .${y}:${w}...     ....              "
echo -e " ${w}.  .${y}::${w}...${y}::${w}..         ...        "
echo -e "${w}.  .${y}::${w}.${y}:::${w}.  .${y}::::---${y}::${w}. .${y}:${w}.      "
echo -e "  ${w}.${y}::::${w}-.  .${y}:${w}----${y}:${w}------....      "
echo -e "${w}.  ${y}:::${w}-. .----------${y}:::::${w}.        "
echo -e "${w}. .${y}:::${w}-. -----${y}:${w}....      ....     "
echo -e "${w}.  .-${y}:${w}-. ${y}:${w}--${y}:${w}.  .${y}::::${w}---${y}:${w}.  .${y}:${w}.   "
echo -e " ${w}..  .${y}:: ${w}.${y}:${w}. .${y}::${w}--${y}:::${w}---${y}::${w}.  .${y}:${w}.  "
echo -e "   ${w}..  ${y}:${w}.${y}:${w}. ${y}:${w}---${y}::::::::::::${w}. .${y}:${w}. "
echo -e "     ${w}...-${y}: ${w}.--${y}::::::${w}.${y}::::::::  ${w}.${y}: "
echo -e        "     ${w}....      .        .."
echo -e "${y}Citr${w}OS${r} $uptime"
